/* plugin/components/kdvideo/kdvideo.wxss */
.kdvideo-wrapper {
  border-bottom: 8rpx solid #e6e6e6;
}
.poster {
  width: 100%;
  height: 390rpx;
  position: relative;
  background-color: #000;
}
.poster .video-poster {
  width: 100%;
  height: 390rpx;
}
.poster-mask {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0,0,0,.35);
}
.poster .play-btn {
  position: absolute;
  height: 120rpx;
  width: 120rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1;
}

.play-time {
  position: absolute;
  color: #fff;
  z-index: 1;
  bottom: 12rpx;
  right: 24rpx;
  font-size: 24rpx;
}

.video {
  width: 100%;
  height: 390rpx;
  position: relative; 
}